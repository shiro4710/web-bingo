{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "target": "ES2015",
      "module": "CommonJS"
    }
  }
}
